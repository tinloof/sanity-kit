{
	"name": "@tinloof/sanity-web",
	"version": "1.1.1",
	"description": "Sanity-related utilities for web development",
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com/tinloof/sanity-kit.git",
		"directory": "packages/sanity-web"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.js"
		},
		"./components": {
			"types": "./dist/components/index.d.ts",
			"import": "./dist/components/index.mjs",
			"require": "./dist/components/index.js"
		},
		"./components/*": {
			"types": "./dist/components/*.d.ts",
			"import": "./dist/components/*.mjs",
			"require": "./dist/components/*.js"
		},
		"./utils": {
			"types": "./dist/utils/index.d.ts",
			"import": "./dist/utils/index.mjs",
			"require": "./dist/utils/index.js"
		},
		"./utils/*": {
			"types": "./dist/utils/*.d.ts",
			"import": "./dist/utils/*.mjs",
			"require": "./dist/utils/*.js"
		},
		"./types": {
			"types": "./dist/types/index.d.ts",
			"import": "./dist/types/index.mjs",
			"require": "./dist/types/index.js"
		},
		"./fragments": {
			"types": "./dist/fragments/index.d.ts",
			"import": "./dist/fragments/index.mjs",
			"require": "./dist/fragments/index.js"
		},
		"./hooks": {
			"types": "./dist/hooks/index.d.ts",
			"import": "./dist/hooks/index.mjs",
			"require": "./dist/hooks/index.js"
		},
		"./package.json": "./package.json"
	},
	"scripts": {
		"build": "tsup 'src/**/*.{ts,tsx}' --format cjs,esm --dts --outDir dist",
		"dev": "tsup 'src/**/*.{ts,tsx}' --format cjs,esm --dts --outDir dist --watch",
		"typecheck": "tsc --noEmit"
	},
	"author": "Tinloof",
	"license": "ISC",
	"devDependencies": {
		"@portabletext/types": "^4.0.1",
		"@types/node": "^24.10.9",
		"@types/react": "^19.2.10",
		"@types/react-dom": "^19.2.3",
		"@types/speakingurl": "^13.0.6",
		"next-sanity": "^12.0.15",
		"react": "^19.2.4",
		"react-dom": "^19.2.4",
		"sanity": "^5.7.0",
		"styled-components": "^6.3.8",
		"tsup": "^8.5.1",
		"typescript": "^5.9.3"
	},
	"peerDependencies": {
		"next-sanity": "^12.0.15",
		"react": "^19.2.4",
		"react-dom": "^19.2.4",
		"sanity": "^5.7.0"
	},
	"dependencies": {
		"@portabletext/react": "^6.0.2",
		"@sanity/asset-utils": "^2.3.0",
		"@sanity/client": "^7.14.1",
		"@sanity/image-url": "^2.0.3",
		"groq": "^5.7.0",
		"speakingurl": "^14.0.1"
	},
	"publishConfig": {
		"access": "public"
	}
}
