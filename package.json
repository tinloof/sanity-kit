{
	"name": "sanity-kit",
	"private": true,
	"workspaces": [
		"apps/*",
		"examples/*",
		"packages/*"
	],
	"scripts": {
		"build-install": "bun install --filter='./packages/*'",
		"build": "turbo run build --filter='./packages/*'",
		"build:example:hello-world-i18n": "turbo run build --filter=./examples/hello-world-i18n-*",
		"changeset": "changeset add",
		"version": "changeset version",
		"dev": "turbo run dev --parallel --filter=./packages/*",
		"dev:all": "turbo run dev",
		"dev:example:hello-world": "turbo run dev --filter=./examples/hello-world",
		"dev:example:with-i18n": "turbo run dev --filter=./examples/with-i18n",
		"dev:example:hello-world-i18n": "turbo run dev --filter=./examples/hello-world-i18n-*",
		"lint": "turbo run lint",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"publish-packages": "turbo run build --filter='./packages/*' lint && changeset version && changeset publish",
		"typecheck": "turbo run typecheck",
		"test": "turbo run test",
		"clean": "rimraf .turbo apps/**/{.next,.sanity,dist,node_modules} packages/**/{.next,.sanity,dist,node_modules} node_modules"
	},
	"engines": {
		"node": ">=18"
	},
	"packageManager": "bun@1.2.17",
	"dependencies": {
		"@changesets/cli": "^2.29.8",
		"turbo": "^2.6.2"
	},
	"devDependencies": {
		"prettier": "^3.7.4",
		"rimraf": "^6.1.2"
	}
}
